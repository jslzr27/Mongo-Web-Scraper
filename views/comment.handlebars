        <div class="col l2 empty"></div>
        <div class="col l8 comments">
            {{#each article.comments}}
            <div class="row comme">
                <div class="col l12">
                    <p>{{this.message}}</p>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="col l2 empty"> </div>
        <div class="row">
            <div class="col l12">
                <form>
                    <div class="form-group">
                        <label for="formGrouo">Message</label>
                        <input type="text" class="form-control" id="message" placeholder="Message">
        
                    </div>
                    <div class="form-group">
                        <label for="formGroup">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="name">
                    </div>
                    <button class="btn" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>